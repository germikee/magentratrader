            type: 'GET',
            contentType: 'application/json; charset=utf-8',
            data: {},
            success: function (Results) {
                if (Results.length > 0) {
                    for (i = 0; i < Results.length; i++) {
                        $("#WebinarList").append("<li class='list-group-item' style='text-align:center'><a href='" + Results[i]["URL"] + "'>" + Results[i]["EventDate"] + " - " + Results[i]["EventDescription"] + "</a></li>");
                    }
                } 
            }
        }).fail(
            function (xhr, textStatus, err) {  }
        );
    });
</script>
